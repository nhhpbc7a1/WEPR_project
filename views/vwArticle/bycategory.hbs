{{#section 'css'}}
<link rel="stylesheet" href="/public/css/list.css">
{{/section}}

{{#section 'js'}}
<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

{{/section}}


<div class="container my-5">
    <div class="row">
        <!-- Cột tìm kiếm -->
        <div class="col-lg-8">
            <!-- Phần tìm kiếm -->
            <h1>Tìm Kiếm</h1>
            <div class="border p-4 bg-light rounded" style="display: none;">
                <form>
                    <div class="form-row align-items-end">
                        <div class="col">
                            <label for="country">Quốc gia</label>
                            <select id="country" class="form-control">
                                <option selected>Tất cả</option>
                                <option>Mỹ</option>
                                <option>Singapore</option>
                                <option>Việt Nam</option>
                                <option>Lào</option>
                                <option>Campuchia</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-row align-items-end">
                        <div class="col-md-3">
                            <label for="keyword">Từ khóa</label>
                            <input type="text" id="keyword" class="form-control" placeholder="Nhập từ khóa">
                        </div>
                        <div class="col-md-2">
                            <label for="time">Thời gian</label>
                            <select id="time" class="form-control">
                                <option selected>Tất cả</option>
                                <option>Mới nhất</option>
                                <option>Cũ hơn</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="category">Chuyên mục</label>
                            <select id="category" class="form-control">
                                <option selected>Tất cả</option>
                                <option>Kinh doanh</option>
                                <option>Thể thao</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="post-type">Dạng bài</label>
                            <select id="post-type" class="form-control">
                                <option selected>Tất cả</option>
                                <option>Tin tức</option>
                                <option>Bài viết</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <button type="submit" class="btn btn-primary btn-block">Tìm kiếm</button>
                        </div>
                    </div>
                </form>
            </div>

            <!-- Phần kết quả -->
            <div class="mt-4">
                <button class="btn btn-secondary btn-sm mr-2">Mới nhất</button>
                <button class="btn btn-primary btn-sm">Liên quan</button>
            </div>

            <div class="mt-3">
                <!-- Bài viết -->
                {{#each articles}}
                <div class="row border-bottom py-3">
                    <div class="col-md-8">
                        <h5><a href="/article_detail?id={{this.article_id}}"
                                class="text-dark featured-article-title">{{this.title}}</a></h5>
                        {{#each tags}}
                        <span class="badge bg-primary me-1">{{tag_name}}</span>
                        {{/each}}
                        <p class="text-muted">{{this.abstract}}</p>
                        <small class="text-muted">
                            Đăng ngày: {{formatDate this.published_date}}
                        </small>
                        <div>

                            <small class="text-muted">{{this.commentsCount}} bình luận</small>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <img src="{{this.image_url}}" alt="Ảnh bài viết" class="img-fluid rounded">
                    </div>
                </div>
                {{/each}}
                <!-- Các bài viết khác... -->
            </div>
            <!-- Phân trang -->
            {{#if pageNumbers}}
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center mt-4">

                    <!-- Nút Previous -->
                    {{#if prevPage}}
                    <li class="page-item">
                        <a class="page-link" href="?id={{categoryId}}?page={{prevPage}}" aria-label="Trang trước">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    {{else}}
                    <li class="page-item disabled">
                        <span class="page-link" aria-label="Trang trước">
                            <span aria-hidden="true">&laquo;</span>
                        </span>
                    </li>
                    {{/if}}

                    <!-- Hiển các trang gần nhất -->
                    {{#each pageNumbers}}
                    {{#if isEllipsis}}
                    <li class="page-item disabled">
                        <span class="page-link">...</span>
                    </li>
                    {{else}}
                    {{#if active}}
                    <li class="page-item active">
                        <a class="page-link" href="?id={{../categoryId}}?page={{value}}" aria-label="Trang {{value}}">{{value}}</a>
                    </li>
                    {{else}}
                    <li class="page-item">
                        <a class="page-link" href="?id={{../categoryId}}?page={{value}}" aria-label="Trang {{value}}">{{value}}</a>
                    </li>
                    {{/if}}
                    {{/if}}
                    {{/each}}

                    <!-- Nút Next -->
                    {{#if nextPage}}
                    <li class="page-item">
                        <a class="page-link" href="?id={{this.categoryId}}?page={{nextPage}}" aria-label="Trang sau">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                    {{else}}
                    <li class="page-item disabled">
                        <span class="page-link" aria-label="Trang sau">
                            <span aria-hidden="true">&raquo;</span>
                        </span>
                    </li>
                    {{/if}}

                </ul>
            </nav>
            {{/if}}
        </div>

        <!-- Cột quảng cáo -->
        <div class="col-lg-4">
            <h5 class="font-weight-bold">Danh mục nổi bật</h5>
            <div class="accordion" id="categoryAccordion">
                <div class="card">
                    <div class="card-header" id="headingOne">
                        <h2 class="mb-0">
                            <button class="btn btn-link text-dark" type="button" data-toggle="collapse"
                                data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                Thế giới
                            </button>
                        </h2>
                    </div>
                    <div id="collapseOne" class="collapse show" aria-labelledby="headingOne"
                        data-parent="#categoryAccordion">
                        <div class="card-body">
                            Nội dung chi tiết về mục "Thế giới".
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header" id="headingTwo">
                        <h2 class="mb-0">
                            <button class="btn btn-link text-dark collapsed" type="button" data-toggle="collapse"
                                data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                Kinh doanh
                            </button>
                        </h2>
                    </div>
                    <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo"
                        data-parent="#categoryAccordion">
                        <div class="card-body">
                            Nội dung chi tiết về mục "Kinh doanh".
                        </div>
                    </div>
                </div>
            </div>

            <!-- Phần danh mục nổi bật: Bài viết được tìm kiếm nhiều -->
            <div class="mt-4">
                <h5 class="font-weight-bold">Bài viết nổi bật</h5>
                <ul class="list-group">
                    <li class="list-group-item">
                        <a href="#" class="text-dark">Nước Mỹ chia rẽ trong bầu cử</a>
                    </li>
                    <li class="list-group-item">
                        <a href="#" class="text-dark">Kinh doanh điện thoại thông minh: Xu hướng năm 2024</a>
                    </li>
                    <li class="list-group-item">
                        <a href="#" class="text-dark">Lao động Gen Z và sự thay đổi trong thị trường việc làm</a>
                    </li>
                    <li class="list-group-item">
                        <a href="#" class="text-dark">Đầu tư vào thị trường bất động sản tại Việt Nam</a>
                    </li>
                    <li class="list-group-item">
                        <a href="#" class="text-dark">Những sự kiện thể thao đáng chú ý trong năm 2024</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>