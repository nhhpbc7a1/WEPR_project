<link rel="stylesheet" href="/public/css/admin/manage_product/add.css">
{{/section}}

{{#section 'js'}}
</script>

{{/section}}

<form action="" method="post">

    <a name="" id="" class=" mb-5 ml-3" href="/admin/category/list" role="button">
        <img src="/public/images/icon/back.png" alt="" width="40px">                               
    </a>
    <div class="container-fluid" style="padding: 0px 40px;">
        <div class="row mt-3">
            <div class="col-12">
                <div class="card info_part" style="font-weight: 500;">
                    <div class="card-header d-flex" style="background-color: rgb(74, 98, 138);">
                        <h5 style="color: white;" class="mr-3 mt-1">Add Catergories Information</h5>
                        <img src="/public/images/icon/add.png" alt="" width="35px" height="35px">
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <div class="form-group">
                                        <label for="txtCatName" style="font-weight: 600; font-size:large">Name</label>
                                        <input type="text" name="category_name" id="txtCatName" class="form-control"
                                            value="{{category.category_name}}">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for=""  style="font-weight: 600; font-size:large">Parent category</label>
                                    <div class="form-group">
                                        {{!-- <label for=""></label> --}}
                                        <select class="form-control" name="parent_category_id" id="">
                                            <option>Root</option>
                                            {{#each parentCat}}
                                            <option value="{{category_id}}">{{category_name}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="button-container_Add mt-5 mx-auto">
                    <button type="submit" class="btnSaveEdit btnActionEdit " formaction="/admin/category/add">
                        <img src="/public/images/icon/icons8-save-100.png" alt="" width="20%" >
                        Save
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>