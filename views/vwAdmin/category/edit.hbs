                                            {{#each parentCat}}
                                            <option value="{{category_id}}" 
                                            {{#ifEquals ../category.parent_category_id category_id}}selected{{/ifEquals}}>
                                                {{category_name}}
                                            </option>
                                            {{/each}}
                                        </select>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

                <div class=" text-muted action_block">
                    <a name="" id="" class="btn btn-outline-success" href="/admin/category/list" role="button">
                        <i class="bi bi-skip-backward-fill"></i>
                        List
                    </a>
                    <button type="submit" class="btn btn-danger ml-3" formaction="/admin/category/del">
                        <i class="bi bi-trash"></i>
                        delete
                    </button>
                    <button type="submit" class="btn btn-primary ml-3" formaction="/admin/category/patch">
                        <i class="bi bi-check2"></i>
                        save
                    </button>

                </div>

            </div>
        </div>
    </div>
