<form action="" method="post">

    <div class="container-fluid" style="padding: 40px;">
        <div class="row">
            <div class="col-12">
                <div class="card info_part">
                    <div class="card-header">
                        <h4>Add Catergories Information</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <div class="form-group">
                                        <label for="txtCatID">Catergory ID</label>
                                        <input type="text" name="category_id" id="txtCatID" class="form-control"
                                            value="{{category.category_id}}" readonly>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <div class="form-group">
                                        <label for="txtCatName">Name</label>
                                        <input type="text" name="category_name" id="txtCatName" class="form-control"
                                            value="{{category.category_name}}">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="">Danh má»¥c cha</label>
                                    <div class="form-group">
