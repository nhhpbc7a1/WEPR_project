<div class="container-fluid" style="padding: 40px;">
    <div class="row">
        <div class="col-12">
            <div class="card info_part">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5>Edit Article Information</h5>
                    <h5>Article ID: #{{article.article_id}}</h5>
                </div>
                <div class="card-body">

                    <div class="container mt-3" style="margin-bottom: 100px;">

                        <form id="frmEditArticle" action="" method="post" enctype="multipart/form-data">
                            <input type="hidden" name="article_id" required class="form-control"
                                value="{{article.article_id}}" readonly>
                            <div class="form-group">
                                <label>Tiêu đề:</label>
                                <input type="text" name="title" required class="form-control" value="{{article.title}}">
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label>Ảnh đại diện (5:3)</label>
                                        <img class="img-thumbnail" {{#if (eq article.image_url "" ) }}
                                            src="https://placehold.co/513x313" {{else}} src="{{article.image_url}}"
                                            {{/if}} style="width: 100%; height: 313px;" id="preview_image">
                                        <input type="file" name="main_image" class="form-control" id="articleImg"
                                            onchange="previewImage(event)">
                                    </div>
                                </div>

                                <div class="col-6">
                                    <div class="form-group">
                                        <label>Danh mục:</label>
                                        <select id="category1" style="width: 200px;" class="form-control">
                                            <option value="">-- Chọn cấp 1 --</option>
                                        </select>
                                        <select id="category2" style="width: 200px;" class="form-control"
                                            name="category_id">
                                            <option value="">-- Chọn cấp 2 --</option>
                                        </select>
                                    </div>

                                    <div class="form-group mt-3">
                                        <label for="isPremium">
                                            Is premium
                                        </label>
                                        <input type="checkbox" name="is_premium" id="isPremium" {{#ifEquals
                                            article.is_premium 1}}checked{{/ifEquals}}>
                                    </div>

                                    <div class="form-group mt-3">
                                        <label for="isPremium">
                                            Bài viết tiêu biểu
                                        </label>
                                        <input type="checkbox" name="is_featured" id="isFeatured" {{#ifEquals
                                            article.is_featured 1}}checked{{/ifEquals}}>
                                    </div>

                                    <div class="form-group">
                                        <label for="txtPublishedDate">Published Date</label>
                                        <input type="text" name="raw_published_date" id="txtPublishedDate" class="form-control">
                                    </div>

                                    <div class="form-group">
                                        <label for="">Trạng thái bài viết</label>
                                        <select name="status" id="" class="form-control">
                                            <option value="draft" {{#ifEquals article.status "draft"
                                                }}selected{{/ifEquals}}>
                                                draft
                                            </option>
                                            <option value="reviewed" {{#ifEquals article.status "reviewed"
                                                }}selected{{/ifEquals}}>
                                                reviewed
                                            </option>
                                            <option value="published" {{#ifEquals article.status "published"
                                                }}selected{{/ifEquals}}>
                                                published
                                            </option>
                                            <option value="rejected" {{#ifEquals article.status "rejected"
                                                }}selected{{/ifEquals}}>
                                                rejected
                                            </option>
                                        </select>
                                    </div>

                                </div>
                            </div>

                            <div class="form-group">
                                <label for="">Tags</label>
                                <select id="my-multiselect" name="tags[]" multiple="multiple" style="width:100%;">
                                    {{#each tags}}
                                    <option value="{{tag_id}}" {{#if (contain_taglink ../oldTags this.tag_id)}} selected
                                        {{/if}}>
                                        {{tag_name}}
                                    </option>
                                    {{/each}}
                                </select>
                            </div>


                            <hr>
                            <div class="form-group mt-5">
                                <label>Tóm tắt:</label>
                                <textarea name="abstract" rows="3" required
                                    class="form-control">{{article.abstract}}</textarea>
                            </div>

                            <label>Nội dung:</label>
                            <div id="editor"></div><br>


                            <div class="mt-5">
                                <a name="" id="" class="btn btn-outline-success" href="/editor/article" role="button">
                                    <i class="bi bi-skip-backward-fill"></i>
                                    List
                                </a>

                                <button type="submit" class="btn btn-primary">
                                    Save
                                </button>

                                <a name="" id="" class="btn btn-danger"
                                    href="/editor/article/del?id={{article.article_id}}" role="button">
                                    <i class="bi bi-trash"></i>
                                    Delete
                                </a>


                            </div>

                            <!-- Thẻ textarea ẩn để lưu dữ liệu từ CKEditor -->
                            <textarea id="form_edit_content" name="content" style="display:none;"></textarea>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>