
<div class="form-group d-flex justify-content-between mb-4">
    <label for="txtUser_id">User ID</label>
    <input type="text" name="user_id" id="txtUser_id" class="form-control custom_input_profile mr-5 " placeholder=""
        readonly required value="{{user_id}}">
</div>
<div class="form-group d-flex justify-content-between mb-4">
    <label for="txtUsername">Username</label>
    <input type="text" name="username" id="txtUsername" class="form-control custom_input_profile mr-5" placeholder=""
        required value="{{username}}">
</div>

<div class="form-group d-flex justify-content-between mb-4">
    <label for="txtPassword">Password</label>
    <input type="password" name="password" id="txtPassword" class="form-control custom_input_profile mr-5"
        placeholder="" required value="">
</div>

<div class="form-group d-flex justify-content-between mb-4">
    <label for="txtPasswordConfirm">Confirm password</label>
    <input type="password" id="txtPasswordConfirm" class="form-control custom_input_profile mr-5" placeholder=""
        required value="">
</div>

<div class="form-group d-flex justify-content-between mb-4 ">
    <label for="txtName">Fullname</label>
    <input type="text" name="fullname" id="txtName" class="form-control custom_input_profile mr-5" placeholder=""
        required value="{{fullname}}">
</div>

<div class="form-group d-flex justify-content-between mb-4">
    <label for="txtEmail">Email</label>
    <input type="text" name="email" id="txtEmail" class="form-control custom_input_profile mr-5" placeholder="" required
        value="{{email}}">
</div>

<div class="form-group d-flex justify-content-between mb-4">
    <label for="txtPhone">Phone number</label>
    <input type="text" name="phone_number" id="txtPhone" class="form-control custom_input_profile mr-5" placeholder=""
        required value="{{phone_number}}">
</div>

<div class="form-group d-flex justify-content-between ">
    <label for="txtBirthday">Birthday</label>
    <input type="text" name="raw_dob" id="txtBirthday" class="form-control custom_input_profile mr-5" required
        value="{{birth_date}}">
</div>

{{#if (eq userType "writer")}}
<div class="form-group d-flex justify-content-between mb-4">
    <label for="txtPenName">Pen Name</label>
    <input type="text" name="pen_name" id="txtPenName" class="form-control custom_input_profile mr-5" placeholder=""
        required value="{{pen_name}}">
</div>
{{/if}}

{{#if (eq userType "subscriber")}}
<div class="form-group d-flex justify-content-between mb-4">
    <label for="txtExpiration">Expiry Date</label>
    <input type="text" name="raw_expiration" id="txtExpiration" class="form-control custom_input_profile mr-5"
        placeholder="" required value="{{expiry_date}}">
</div>
{{/if}}